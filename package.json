{
  "name": "@jupl/tslint-config",
  "version": "0.2.0",
  "description": "Personal TSLint configuration",
  "author": "jupl",
  "license": "MIT",
  "homepage": "https://github.com/jupl/tslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jupl/tslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/jupl/tslint-config/issues"
  },
  "main": "./index.js",
  "scripts": {
    "lint": "npm run lint:file -- '*.{t,j}s' 'rules/**/*.test.{t,j}s'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "pretest": "npm run lint"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": "(/__tests__/.*|[./](test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "peerDependencies": {
    "tslint": ">=5.8.0",
    "tslint-eslint-rules": ">=4.1.1",
    "tslint-immutable": ">=4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/mz": "0.0.32",
    "@types/node": "^8.0.46",
    "@types/react": "^16.0.17",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "mz": "^2.7.0",
    "react": "^16.0.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.4.0",
    "tslint-language-service": "^0.9.6",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3"
  }
}
