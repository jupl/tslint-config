{
  "name": "@jupl/tslint-config",
  "version": "0.4.0",
  "description": "Personal TSLint configuration",
  "author": "jupl",
  "license": "MIT",
  "homepage": "https://github.com/jupl/tslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jupl/tslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/jupl/tslint-config/issues"
  },
  "main": "./index.js",
  "scripts": {
    "lint": "npm run lint:file -- '*.{t,j}s' 'rules/**/*.test.{t,j}s'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "pretest": "npm run lint"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": "(/__tests__/.*|[./](test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "peerDependencies": {
    "tslint": ">=5.9.0",
    "tslint-eslint-rules": ">=5.1.0",
    "tslint-immutable": ">=4.5.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/mz": "0.0.32",
    "@types/node": "^9.6.2",
    "@types/react": "^16.3.5",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "mz": "^2.7.0",
    "react": "^16.3.1",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-immutable": "^4.5.3",
    "tslint-language-service": "^0.9.9",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1"
  }
}
