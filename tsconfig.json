{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "maxNodeModuleJsDepth": 1,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {"name": "typescript-tslint-plugin"}
    ],
    "strict": true,
    "target": "es2017"
  }
}
